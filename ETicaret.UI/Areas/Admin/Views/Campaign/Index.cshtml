@model ICollection<ETicaret.Model.Models.Entity.Campaign>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@*<script src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>*@

<section class="content-header">
    <h2>Index</h2>
    <p>

    </p>

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Layout</a></li>
        <li class="active">Fixed</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Hover Data Table</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayName("Kampanya Adı")
                            </th>
                            <th>
                                @Html.DisplayName("Kampanya Başlangıç Tarihi")
                            </th>
                            <th>
                                @Html.DisplayName("Kampanya Bitiş Tarihi")
                            </th>
                            <th>
                                @Html.DisplayName("İndirim Miktarı")
                            </th>
                            <th>
                                @Html.DisplayName("Resim Yolu")
                            </th>
                            <th>
                                @Html.DisplayName("Durumu")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndingDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Discount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PictureUrl)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.CampaignID }, new { @data_id = item.CampaignID, @class = "btn btn-default fa fa-pencil" }) |

                                    @Html.ActionLink(" ", "Delete", new { id = item.CampaignID }, new { @href = "javascript:;", @data_id = item.CampaignID, @class = "delete btn btn-default fa fa-trash", style = "color:red" })

                                </td>
                            </tr>
                        }
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="modal fade" id="categoryDeleteModal">

    </div>

</section>

